@model IEnumerable<GAMF.Models.Enrollment>

@{
    ViewData["Title"] = "Jelentkezés";
}

<h1>Index</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-controller="Enrollments"
                   asp-action="Index"
                   asp-route-sortOrder="@ViewBag.CourseSortParam">Tantárgy</a>
            </th>
            <th>
                <a asp-controller="Enrollments"
                   asp-action="Index"
                   asp-route-sortOrder="@ViewBag.NameSortParam">Tanuló neve</a>
            </th>
            <th>
                Jegy
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Course.Title
                </td>
                <td>
                    @item.Student.LastName
                </td>
                <td>
                    @item.Grade
                </td>
            </tr>
        }
    </tbody>
</table>


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.CourseId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EnrollmentId">Szerkesztée</a> |
                <a asp-action="Details" asp-route-id="@item.EnrollmentId">Résszletek</a> |
                <a asp-action="Delete" asp-route-id="@item.EnrollmentId">törlés</a>
            </td>
        </tr>
}
    </tbody>
</table>
